{
  "name": "be",
  "version": "1.0.0",
  "description": "",
  "main": "dist/be/index.js",
  "scripts": {
    "start": "node dist/be/index.js",
    "dev": "npm run build && node dist/be/index.js",
    "dev:watch": "nodemon --watch . --ext ts,js,json --ignore dist --exec \"npm run build && node dist/be/index.js\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "migrate": "node utils/migrate.js up",
    "migrate:down": "node utils/migrate.js down",
    "migrate:status": "node utils/migrate.js status",
    "validate": "npx ts-node -r tsconfig-paths/register scripts/validate-game-data.ts",
    "clean": "node -e \"require('fs').rmSync('dist', {recursive: true, force: true})\"",
    "build": "npm run validate && npm run clean && tsc && npm run copy-data",
    "build:skip-validation": "npm run clean && tsc && npm run copy-data",
    "copy-data": "node -e \"require('fs').cpSync('data', 'dist/be/data', {recursive: true})\"",
    "build:watch": "tsc --watch",
    "type-check": "tsc --noEmit",
    "generate:items": "npx ts-node -r tsconfig-paths/register scripts/convert-json-to-ts.ts && npx ts-node -r tsconfig-paths/register scripts/generate-registry.ts",
    "generate:registry": "npx ts-node -r tsconfig-paths/register scripts/generate-registry.ts",
    "generate:xp-curve": "npx ts-node -r tsconfig-paths/register utils/generate-xp-curve.ts",
    "survey:activity-xp": "npx ts-node -r tsconfig-paths/register utils/survey-activity-xp.ts",
    "update:activity-xp": "npx ts-node utils/update-activity-xp.ts",
    "test:items": "npx ts-node -r tsconfig-paths/register scripts/test-item-registry.ts",
    "progression": "npx ts-node -r tsconfig-paths/register utils/calculate-skill-progression.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-validator": "^7.3.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.3",
    "socket.io": "^4.8.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.0",
    "@types/uuid": "^10.0.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  }
}
